<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:contentDescription="@string/imageView_background"
        app:srcCompat="@drawable/fishmosaic2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleType="fitXY">

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="8sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <TextView
            android:id="@+id/textView_currentEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/example_email"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="8sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_changeEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_email2"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                app:backgroundTint="@android:color/holo_blue_light"
                app:fontFamily="casual" />

            <Button
                android:id="@+id/button_changePassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_password"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                app:backgroundTint="@android:color/holo_blue_light"
                app:fontFamily="casual" />
        </LinearLayout>

        <Button
            android:id="@+id/button_deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_account"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_red_light"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/button_goBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/go_back"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_blue_light"
            app:fontFamily="casual" />

    </LinearLayout>

</RelativeLayout>