<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:contentDescription="@string/imageView_background"
        app:srcCompat="@drawable/fishmosaic2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleType="fitXY">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tapat_app"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/email"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:maxLength="40"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <TextView
                    android:id="@+id/errorMessage_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:fontFamily="casual" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/username_title"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/editText_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:maxLength="20"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <TextView
                    android:id="@+id/errorMessage_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:fontFamily="casual" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/password_title"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <TextView
                    android:id="@+id/errorMessage_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:fontFamily="casual" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/password_2"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/editText_passwordRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <TextView
                    android:id="@+id/errorMessage_passwordRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:fontFamily="casual" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_blue_light"
            app:fontFamily="casual" />

    </LinearLayout>
</RelativeLayout>