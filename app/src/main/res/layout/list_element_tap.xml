<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/button_deleteTap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="X"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_red_light"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/boton_layout_remove"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tapTypeInit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <TextView
            android:id="@+id/tapTypeEnd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Fin"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="casual" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonChangeDateInit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:tag="dateInit"
            android:text="date"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/buttonChangeDateEnd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:tag="dateEnd"
            android:text="date"
            android:textStyle="bold"
            app:fontFamily="casual" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonChangeHourInit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:tag="hourInit"
            android:text="hour"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/buttonChangeHourEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="hourEnd"
            android:text="hour"
            android:textStyle="bold"
            app:fontFamily="casual" />
    </LinearLayout>

</LinearLayout>