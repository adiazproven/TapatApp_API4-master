            android:textSize="36sp" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:divider="#000"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false"
