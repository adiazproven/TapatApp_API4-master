<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_reload_main2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#701A79A8"
        android:text="â†»"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageView_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:contentDescription="@string/imageView_background"
        app:srcCompat="@drawable/fishmosaic2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/textView_childName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/picture_frame"
            android:text="@string/textView_childName"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_eyepatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/eyepatchbutton"
                    android:cropToPadding="false"
                    android:focusable="true"
                    app:srcCompat="@drawable/witheyepatch" />

                <ImageView
                    android:id="@+id/imageView_awake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/awakebutton"
                    android:cropToPadding="false"
                    android:focusable="true"
                    app:srcCompat="@drawable/awake" />

            </LinearLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_eyepatch_hours_remaining"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/textView_hoursRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_hours_remaining"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>