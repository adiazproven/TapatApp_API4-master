<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lam.android.tapatapp_api4">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/witheyepatch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".controller.activities.Activity_UserLogin"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".controller.activities.TapatApp"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activities.Activity_Main" />
        <activity android:name=".controller.activities.Activity_MainEmpty" />
        <activity android:name=".controller.activities.Activity_ChildCreate" />
        <activity android:name=".controller.activities.Activity_ChildModify" />
        <activity android:name=".controller.activities.Activity_UserConfig" />
        <activity
            android:name=".controller.activities.Activity_UserRegister"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".controller.activities.Activity_ListOfChildren" />
        <activity android:name=".controller.activities.Activity_ListOfTaps" />

    </application>

</manifest>